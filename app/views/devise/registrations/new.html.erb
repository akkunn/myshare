<div class="new-register">
  <h2>新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
    </div>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.email_field :email, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
    </div>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class:"blue-box" %>
    </div>
  <% end %>
  <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: "new-register-string" %>


</div>
