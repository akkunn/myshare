<div class="new-register">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>

    <div class="field">
      <span class="red-box">必須</span>
      <%= f.password_field :password, autocomplete: "current-password",  placeholder:"パスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class:"blue-box" %>
    </div>
  <% end %>
  <%= link_to "新しいアカウントを作成", new_user_registration_path, class: "new-register-string" %>

</div>
