<div class="reserve-back">
  <div class="reserve-create">
    <div class="reserve-create-flex">
      <h3>予約した部屋</h3>
      <div class="reserve-create-content">
        <%= @room.name %>
      </div>
    </div>
    <div class="reserve-create-flex">
      <h3>開始日</h3>
      <div class="reserve-create-content">
        <%= @reserve.start_day.strftime("%Y年 %m月 %d日") %>
      </div>
    </div>
    <div class="reserve-create-flex">
      <h3>終了日</h3>
      <div class="reserve-create-content">
        <%= @reserve.end_day.strftime("%Y年 %m月 %d日") %>
      </div>
    </div>
    <div class="reserve-create-flex">
      <h3>価格</h3>
      <div class="reserve-create-content">
        <%= "#{@reserve.sum_price}円" %>
      </div>
    </div>
  </div>
</div>



