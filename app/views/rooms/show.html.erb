

<% if @room.img_name? %>
  <%= image_tag @room.img_name.url, :size => '500x300', class: 'img' %>
<% else %>
  <%= image_tag "/assets/rails2.jpeg", :size => '500x300' %>
<% end %>

<% if @user.imr_name? %>
  <%= image_tag @user.imr_name.url, :size => '200x100', class: 'img' %>
<% else %>
  <%= image_tag "/assets/default_icon.jpeg", :size => '200x100' %>
<% end %>

<%= @room.name %>
<%= @room.address %>
<%= @room.introduction %>



<div>
  <%= form_with scope: :reserve, url: new_reserf_path, method: :post do |f| %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= "¥" + @room.price.to_s + "/" + "日" %>
    <%= f.label :start_day ,"開始日" %>
    <%= f.date_field :start_day %>
    <%= f.label :end_day ,"終了日" %>
    <%= f.date_field :end_day %>
    <%= f.label :number_people ,"人数" %>
    <%= f.text_field :number_people %>
    <%= f.submit "予約する" %>

  <% end %>
</div>
