
<div class="room-show">
  <div class="room-imgname-imrname-nameaddress">
    <% if @room.img_name? %>
      <%= image_tag @room.img_name.url,  class: 'room-img' %>
    <% else %>
      <%= image_tag "/assets/rails2.jpeg", :size => '500x300' %>
    <% end %>

    <div class="room-imrname-nameaddress">
      <% if @user.imr_name? %>
        <%= image_tag @user.imr_name.url, :size => '70x70', class: 'user-img' %>
      <% else %>
        <%= image_tag "/assets/default_icon.jpeg", :size => '70x70',  class: 'user-img' %>
      <% end %>
      <div class="room-name-address">
        <p><%= @room.name %></p>
        <p><%= @room.address %></p>
      </div>
    </div>
    <p class="room-show-introduction"><%= @room.introduction %></p>
  </div>
  <div class="room-show-show-form">
    <div class="room-show-form">
      <%= form_with scope: :reserve, url: new_reserf_path, method: :post, class: 'room-show-formwith' do |f| %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <p><%= "¥" + @room.price.to_s + "/" + "日" %></p>
        <%= f.label :start_day ,"開始日" %>
        <%= f.date_field :start_day %>
        <%= f.label :end_day ,"終了日" %>
        <%= f.date_field :end_day %>
        <%= f.label :number_people ,"人数" %>
        <%= f.text_field :number_people %>
        <%= f.submit "予約する" %>
      <% end %>
    </div>
  </div>
</div>
